<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foregroundTint="#FFFFFF">

    <androidx.cardview.widget.CardView
        android:id="@+id/vote_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/vote_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vote_name"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_weight="20"
                android:text="Name"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/voting_btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/yes"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:button="@drawable/button_yes_off" />

                <RadioButton
                    android:id="@+id/bad_time"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:button="@drawable/button_no_off" />

                <RadioButton
                    android:id="@+id/dont_want"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:button="@drawable/button_no_off" />

            </RadioGroup>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>